\begin{equation}
	\Gamma_\mu^{(T)} = \frac{1}{T_{\text{field}}} \partial_\mu T_{\text{field}} = -\frac{\partial_\mu E_{\text{field}}}{E_{\text{field}}^2}
\end{equation}

