\begin{equation}
	X: E_0(x,t) \leftrightarrow E_1(x,t)
\end{equation}

\textbf{Hadamard Gate:}
\begin{equation}
	H: E_0(x,t) \rightarrow \frac{1}{\sqrt{2}}[E_0(x,t) + E_1(x,t)]
\end{equation}

\textbf{CNOT Gate:}
\begin{equation}
	\text{CNOT}: E_{12}(x_1,x_2,t) = E_1(x_1,t) \cdot f_{\text{control}}(E_2(x_2,t))
\end{equation}

