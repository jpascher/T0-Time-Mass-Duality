\begin{equation}
	\boxed{i \hbar \frac{\partial\psi}{\partial t} + i\psi\left[\frac{\partial T_{\text{field}}}{\partial t} + \vec{v} \cdot \nabla T_{\text{field}}\right] = \hat{H}\psi}
	\label{eq:modified_schrodinger}
\end{equation}

